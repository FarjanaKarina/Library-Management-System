@model LMS.DataModel.Fine
@{
    ViewData["Title"] = "Add Fine";
}

<h2>Add Fine</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label>Member</label>
        <select asp-for="MemberId" class="form-control">
            <option value="">-- Select Member --</option>
            @foreach (var m in ViewBag.Members)
            {
                <option value="@m.MemberId">@m.MemberName</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Issue</label>
        <select asp-for="IssueId" class="form-control">
            <option value="">-- Select Issue --</option>
            @foreach (var i in ViewBag.BookIssues)
            {
                <option value="@i.IssueId">@i.IssueId</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Fine Amount</label>
        <input asp-for="FineAmount" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Fine Date</label>
        <input asp-for="FineDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Payment Status</label>
        <select asp-for="PaymentStatus" class="form-control">
            <option value="Paid">Paid</option>
            <option value="Unpaid">Unpaid</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
