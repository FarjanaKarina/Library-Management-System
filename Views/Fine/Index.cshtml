@model IEnumerable<LMS.ViewModel.FineVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Fine Report";
}

<h2>Fine Report</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add Fine</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Member Name</th>
            <th>Book Title</th>
            <th>Fine Amount</th>
            <th>Fine Date</th>
            <th>Payment Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberName</td>
                <td>@item.BookTitle</td>
                <td>@item.FineAmount.ToString("0.00")</td>
                <td>@item.FineDate.ToShortDateString()</td>
                <td>@item.PaymentStatus</td>
            </tr>
        }
    </tbody>
</table>
