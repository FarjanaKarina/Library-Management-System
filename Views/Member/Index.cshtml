@{
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Members";
}
@model LMS.ViewModel.MemberVM

<h1>Hey! This is Member Controller Index</h1>

<form asp-action="Index" asp-controller="Member" method="post">

    <label>Member Name</label>
    <input type="text" asp-for="MemberName" placeholder="Enter Member Name" />

    <label>Member Type</label>
    <select asp-for="MemberType">
        <option value="Student">Student</option>
        <option value="Staff">Staff</option>
        <option value="External">External</option>
    </select>

    <label>Address</label>
    <input type="text" asp-for="Address" placeholder="Enter Address" />

    <label>Phone Number</label>
    <input type="text" asp-for="PhoneNumber" placeholder="Enter Phone Number" />

    <label>Email</label>
    <input type="email" asp-for="Email" placeholder="Enter Email Address" />

    <label>Join Date</label>
    <input type="date" asp-for="JoinDate" />

    <label>Expiry Date</label>
    <input type="date" asp-for="ExpiryDate" />

    <label>Status</label>
    <select asp-for="Status">
        <option value="Active">Active</option>
        <option value="Inactive">Inactive</option>
    </select>

    <button type="submit">Submit</button>
</form>
