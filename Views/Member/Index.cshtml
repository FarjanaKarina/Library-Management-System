@model IEnumerable<LMS.DataModel.Member>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Members";
}

<h2 class="mb-3">Members List</h2>
<a href="/Member/Create" class="btn btn-primary mb-3">Add New Member</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Member Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Join Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.JoinDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
