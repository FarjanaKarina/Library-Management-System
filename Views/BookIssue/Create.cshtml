@model LMS.DataModel.BookIssue
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Issue Book";
}
<h2>Issue New Book</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group mb-3">
        <label>Member</label>
        <select asp-for="MemberId" class="form-control">
            <option value="">-- Select Member --</option>
            @foreach (var m in ViewBag.Members)
            {
                <option value="@m.MemberId">@m.MemberName</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Book</label>
        <select asp-for="BookId" class="form-control">
            <option value="">-- Select Book --</option>
            @foreach (var b in ViewBag.Books)
            {
                <option value="@b.BookId">@b.Title</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Issue Date</label>
        <input asp-for="IssueDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
